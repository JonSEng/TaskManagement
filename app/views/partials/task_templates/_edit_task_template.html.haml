.edit_task_template.modal_form
  = form_for(task_template, :remote => true) do |f|
    - if task_template.errors.any?
      #error_explanation
        %h2= "#{pluralize(task_template.errors.count, "error")} prohibited this task_template from being saved:"
        %ul
          - task_template.errors.full_messages.each do |msg|
            %li= msg

    Title:
    = f.text_field :title, value: task_template != nil ? task_template.title : "", :placeholder => "Title", :id => "title"
    %br

    Location:
    = f.text_field :location, value: task_template != nil ? task_template.location: "", :placeholder => "Location", :id => "location"
    %br

    Created By:
    = f.text_field :created_by, value: task_template != nil ? task_template.created_by : "", :placeholder => "Created By", :id => "created_by"
    %br

    Date:
    = f.date_field :date, :value => (task_template.date != nil) ? Date.parse(task_template.date.to_s) : Date.today.to_s
    %br

    = f.submit 'Save', :onclick => "return checkvalue('title') && checkvalue('location') && checkvalue('created_by')", :class => "submit_edit_task_template"
