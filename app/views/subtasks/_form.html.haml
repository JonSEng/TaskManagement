= form_for(@subtask, :remote => true) do |f|
  - if @subtask.errors.any?
    #error_explanation
      %h2= "#{pluralize(@subtask.errors.count, "error")} prohibited this subtask from being saved:"
      %ul
        - @subtask.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :finished
    = f.check_box :finished
  .actions
    = f.submit 'Save'
